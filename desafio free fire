#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_ITENS 10 // tamanho máximo da mochila (versão com vetor)

//====================//
//     ESTRUTURAS     //
//====================//

// Estrutura base: representa um item (para as duas versões)
typedef struct {
    char nome[30];
    char tipo[20];
    int quantidade;
} Item;

// Nó para lista encadeada
typedef struct No {
    Item dados;
    struct No* proximo;
} No;

//====================//
//   PROTÓTIPOS       //
//====================//

// Funções da versão com VETOR
void inserirItemVetor(Item mochila[], int *contador);
void removerItemVetor(Item mochila[], int *contador);
void listarItensVetor(Item mochila[], int contador);
int buscarSequencialVetor(Item mochila[], int contador, char nome[]);
void ordenarVetor(Item mochila[], int contador);
int buscarBinariaVetor(Item mochila[], int contador, char nome[]);
void menuVetor();

// Funções da versão com LISTA ENCADEADA
No* inserirItemLista(No* inicio);
No* removerItemLista(No* inicio);
void listarItensLista(No* inicio);
int buscarSequencialLista(No* inicio, char nome[]);
void liberarLista(No* inicio);
void menuLista();

//====================//
//   VARIÁVEIS GLOBAIS
//====================//
int comparacoesSequencial = 0;
int comparacoesBinaria = 0;

//====================//
//     FUNÇÃO MAIN     //
//====================//
int main() {
    int opcao;

    printf("=== SISTEMA DE MOCHILA DE SOBREVIVENCIA AVANCADO ===\n");
    printf("Agora voce pode testar a eficiencia entre VETOR e LISTA ENCADEADA!\n\n");

    do {
        printf("\nSelecione o modo de estrutura:\n");
        printf("1. Mochila (Vetor estatico)\n");
        printf("2. Mochila (Lista encadeada)\n");
        printf("0. Sair\n");
        printf("Opcao: ");
        scanf("%d", &opcao);
        getchar();

        switch (opcao) {
            case 1:
                menuVetor();
                break;
            case 2:
                menuLista();
                break;
            case 0:
                printf("\nEncerrando o sistema... Ate a proxima aventura!\n");
                break;
            default:
                printf("Opcao invalida!\n");
        }
    } while (opcao != 0);

    return 0;
}

//====================//
//   MODO VETOR       //
//====================//

void menuVetor() {
    Item mochila[MAX_ITENS];
    int contador = 0;
    int opcao;
    char nomeBusca[30];

    do {
        printf("\n=== Mochila (Vetor) ===\n");
        printf("1. Inserir item\n");
        printf("2. Remover item\n");
        printf("3. Listar itens\n");
        printf("4. Buscar item (Sequencial)\n");
        printf("5. Ordenar e buscar item (Binaria)\n");
        printf("0. Voltar ao menu principal\n");
        printf("Opcao: ");
        scanf("%d", &opcao);
        getchar();

        switch (opcao) {
            case 1:
                inserirItemVetor(mochila, &contador);
                break;
            case 2:
                removerItemVetor(mochila, &contador);
                break;
            case 3:
                listarItensVetor(mochila, contador);
                break;
            case 4:
                printf("\nDigite o nome do item: ");
                fgets(nomeBusca, 30, stdin);
                nomeBusca[strcspn(nomeBusca, "\n")] = '\0';
                comparacoesSequencial = 0;
                buscarSequencialVetor(mochila, contador, nomeBusca);
                printf("Comparacoes realizadas: %d\n", comparacoesSequencial);
                break;
            case 5:
                ordenarVetor(mochila, contador);
                printf("\nDigite o nome do item: ");
                fgets(nomeBusca, 30, stdin);
                nomeBusca[strcspn(nomeBusca, "\n")] = '\0';
                comparacoesBinaria = 0;
                buscarBinariaVetor(mochila, contador, nomeBusca);
                printf("Comparacoes realizadas: %d\n", comparacoesBinaria);
                break;
        }
    } while (opcao != 0);
}

void inserirItemVetor(Item mochila[], int *contador) {
    if (*contador >= MAX_ITENS) {
        printf("\nA mochila esta cheia!\n");
        return;
    }

    Item novo;
    printf("\nNome: ");
    fgets(novo.nome, 30, stdin);
    novo.nome[strcspn(novo.nome, "\n")] = '\0';
    printf("Tipo: ");
    fgets(novo.tipo, 20, stdin);
    novo.tipo[strcspn(novo.tipo, "\n")] = '\0';
    printf("Quantidade: ");
    scanf("%d", &novo.quantidade);
    getchar();

    mochila[*contador] = novo;
    (*contador)++;

    printf("Item adicionado!\n");
}

void removerItemVetor(Item mochila[], int *contador) {
    char nome[30];
    printf("\nDigite o nome do item a remover: ");
    fgets(nome, 30, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    for (int i = 0; i < *contador; i++) {
        if (strcmp(mochila[i].nome, nome) == 0) {
            for (int j = i; j < *contador - 1; j++)
                mochila[j] = mochila[j + 1];
            (*contador)--;
            printf("Item removido!\n");
            return;
        }
    }
    printf("Item nao encontrado.\n");
}

void listarItensVetor(Item mochila[], int contador) {
    printf("\n=== Itens ===\n");
    for (int i = 0; i < contador; i++) {
        printf("%d. %s (%s) - %d\n", i + 1, mochila[i].nome, mochila[i].tipo, mochila[i].quantidade);
    }
}

int buscarSequencialVetor(Item mochila[], int contador, char nome[]) {
    for (int i = 0; i < contador; i++) {
        comparacoesSequencial++;
        if (strcmp(mochila[i].nome, nome) == 0) {
            printf("Item encontrado: %s (%s), Qtd: %d\n", mochila[i].nome, mochila[i].tipo, mochila[i].quantidade);
            return i;
        }
    }
    printf("Item nao encontrado.\n");
    return -1;
}

void ordenarVetor(Item mochila[], int contador) {
    Item temp;
    for (int i = 0; i < contador - 1; i++) {
        for (int j = 0; j < contador - i - 1; j++) {
            if (strcmp(mochila[j].nome, mochila[j + 1].nome) > 0) {
                temp = mochila[j];
                mochila[j] = mochila[j + 1];
                mochila[j + 1] = temp;
            }
        }
    }
    printf("\nItens ordenados por nome!\n");
}

int buscarBinariaVetor(Item mochila[], int contador, char nome[]) {
    int inicio = 0, fim = contador - 1, meio;

    while (inicio <= fim) {
        meio = (inicio + fim) / 2;
        comparacoesBinaria++;

        int cmp = strcmp(mochila[meio].nome, nome);

        if (cmp == 0) {
            printf("Item encontrado: %s (%s), Qtd: %d\n", mochila[meio].nome, mochila[meio].tipo, mochila[meio].quantidade);
            return meio;
        }
        else if (cmp < 0)
            inicio = meio + 1;
        else
            fim = meio - 1;
    }

    printf("Item nao encontrado.\n");
    return -1;
}

//====================//
//   MODO LISTA       //
//====================//

void menuLista() {
    No* inicio = NULL;
    int opcao;
    char nomeBusca[30];

    do {
        printf("\n=== Mochila (Lista encadeada) ===\n");
        printf("1. Inserir item\n");
        printf("2. Remover item\n");
        printf("3. Listar itens\n");
        printf("4. Buscar item (Sequencial)\n");
        printf("0. Voltar ao menu principal\n");
        printf("Opcao: ");
        scanf("%d", &opcao);
        getchar();

        switch (opcao) {
            case 1:
                inicio = inserirItemLista(inicio);
                break;
            case 2:
                inicio = removerItemLista(inicio);
                break;
            case 3:
                listarItensLista(inicio);
                break;
            case 4:
                printf("Digite o nome do item: ");
                fgets(nomeBusca, 30, stdin);
                nomeBusca[strcspn(nomeBusca, "\n")] = '\0';
                comparacoesSequencial = 0;
                buscarSequencialLista(inicio, nomeBusca);
                printf("Comparacoes realizadas: %d\n", comparacoesSequencial);
                break;
        }
    } while (opcao != 0);

    liberarLista(inicio);
}

No* inserirItemLista(No* inicio) {
    No* novo = (No*) malloc(sizeof(No));
    printf("\nNome: ");
    fgets(novo->dados.nome, 30, stdin);
    novo->dados.nome[strcspn(novo->dados.nome, "\n")] = '\0';
    printf("Tipo: ");
    fgets(novo->dados.tipo, 20, stdin);
    novo->dados.tipo[strcspn(novo->dados.tipo, "\n")] = '\0';
    printf("Quantidade: ");
    scanf("%d", &novo->dados.quantidade);
    getchar();

    novo->proximo = inicio;
    printf("Item adicionado!\n");
    return novo;
}

No* removerItemLista(No* inicio) {
    if (inicio == NULL) {
        printf("Mochila vazia.\n");
        return inicio;
    }

    char nome[30];
    printf("Digite o nome do item a remover: ");
    fgets(nome, 30, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    No* atual = inicio;
    No* anterior = NULL;

    while (atual != NULL && strcmp(atual->dados.nome, nome) != 0) {
        anterior = atual;
        atual = atual->proximo;
    }

    if (atual == NULL) {
        printf("Item nao encontrado.\n");
        return inicio;
    }

    if (anterior == NULL)
        inicio = atual->proximo;
    else
        anterior->proximo = atual->proximo;

    free(atual);
    printf("Item removido!\n");
    return inicio;
}

void listarItensLista(No* inicio) {
    if (inicio == NULL) {
        printf("Mochila vazia.\n");
        return;
    }

    printf("\n=== Itens ===\n");
    No* aux = inicio;
    while (aux != NULL) {
        printf("%s (%s) - %d\n", aux->dados.nome, aux->dados.tipo, aux->dados.quantidade);
        aux = aux->proximo;
    }
}

int buscarSequencialLista(No* inicio, char nome[]) {
    No* aux = inicio;

    while (aux != NULL) {
        comparacoesSequencial++;
        if (strcmp(aux->dados.nome, nome) == 0) {
            printf("Item encontrado: %s (%s), Qtd: %d\n", aux->dados.nome, aux->dados.tipo, aux->dados.quantidade);
            return 1;
        }
        aux = aux->proximo;
    }

    printf("Item nao encontrado.\n");
    return 0;
}

void liberarLista(No* inicio) {
    No* temp;
    while (inicio != NULL) {
        temp = inicio;
        inicio = inicio->proximo;
        free(temp);
    }
}

